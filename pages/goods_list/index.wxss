/* pages/goods_list/index.wxss */
.goods_group {
  display: flex;
  margin: 20rpx;
  border: 1px #e2e2e2 solid;
  background-color: #f9f8f8;
  border-radius: 10rpx;
  padding: 20rpx 0;
}
.goods_group .goods_Img {
  flex: 2;
  display: flex;
  align-items: center;
  justify-content: center;
}
.goods_group .goods_Img image {
  width: 70%;
  height: 100%;
}
.goods_group .goods_Info {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.goods_group .goods_Info .goods_name {
  font-size: 32rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.goods_group .goods_Info .goods_price {
  font-size: 28rpx;
}
