
<view class="uesr_group">
    <view class="user_bg">
        <view class="user_group_top" wx:if="{{userInfo.avatarUrl}}">
            <view class="uesr_avatar_big">
                <image mode="widthFix" src="{{userInfo.avatarUrl}}" />
            </view>
            <view class="uesr_avatar_small">
                <image src="{{userInfo.avatarUrl}}" />
                <view  class="user_name">{{userInfo.nickName}}</view>
            </view>
        </view>
        <view class="login_group" wx:else>
            <navigator url="/pages/login/index">
                <view class="login_btn">登录</view>
            </navigator>
        </view>
    </view>
    <view class="uesr_main">
        <view class="history_wrap">
            <navigator class="his_nav">
                <view class="his_num">0</view>
                <view class="his_name">收藏的店铺</view>
            </navigator>
            <navigator class="his_nav">
                <view class="his_num">0</view>
                <view class="his_name">收藏的商品</view>
            </navigator>
            <navigator class="his_nav">
                <view class="his_num">0</view>
                <view class="his_name">关注的商品</view>
            </navigator>
            <navigator class="his_nav">
                <view class="his_num">0</view>
                <view class="his_name">我的足迹</view>
            </navigator>
        </view>

        <view class="order_name">我的订单</view>
         <view class="user_order">
            <navigator class="his_nav">
                <view class="his_num iconfont icon-dingdan"></view>
                <view class="his_name">全部订单</view>
            </navigator>
            <navigator class="his_nav">
                <view class="his_num iconfont icon-fukuan"></view>
                <view class="his_name">代付款</view>
            </navigator>
            <navigator class="his_nav">
                <view class="his_num iconfont icon-daishouhuo"></view>
                <view class="his_name">待收货</view>
            </navigator>
            <navigator class="his_nav">
                <view class="his_num iconfont icon-tuikuan"></view>
                <view class="his_name">退款</view>
            </navigator>
        </view>

         <view class="user_list">
            <view class="user_connect">
                <text>联系客服</text>
                <text>0000-00-00</text>
            </view>
            <view >意见反馈</view>
            <view >关于我们</view>
        </view>
    </view>
   
</view>
